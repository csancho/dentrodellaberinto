# Docker Environment Configuration
COMPOSE_PROJECT_NAME=prestashop-prod

# Database Configuration
DB_HOST=mysql
DB_NAME=prestashop
DB_USER=prestashop
DB_PASSWORD=prestashop
DB_ROOT_PASSWORD=your_secure_root_password

# PrestaShop Configuration
PS_ADMIN_EMAIL=admin@dentrodellaberinto.com
PS_ADMIN_PASSWORD=your_secure_admin_password
PS_DOMAIN=dentrodellaberinto.com

# SSL/Cloudflare Configuration (required for Let's Encrypt DNS challenge)
ACME_EMAIL=admin@dentrodellaberinto.com
CF_API_EMAIL=your-cloudflare-email@example.com
CF_DNS_API_TOKEN=your_cloudflare_dns_api_token

# Traefik Dashboard Authentication (generate with: htpasswd -nb admin password)
TRAEFIK_DASHBOARD_AUTH=admin:$$2y$$10$$your_bcrypt_hash

# phpMyAdmin Authentication (generate with: htpasswd -nb admin password)
PHPMYADMIN_AUTH=admin:$$2y$$10$$your_bcrypt_hash

# Environment Settings
ENVIRONMENT=production
DEBUG=false